# Redis config
REDIS_HOST=localhost
REDIS_PORT=6379

# Ingestion
DOCUMENTS=msmarco-docs.tsv

# Tokenizer configuration
TOKENIZER_BACKEND=simple  # "simple" or "spacy"
TOKENIZER_MIN_LEN=2
TOKENIZER_LOWERCASE=true
TOKENIZER_ASCII_FOLD=true
TOKENIZER_REMOVE_STOPWORDS=true
TOKENIZER_STEM=false
TOKENIZER_NUMBER_NORMALIZE=true

# spaCy-specific settings 
SPACY_MODEL=blank
# e.g. "parser,ner". leave empty for none
SPACY_DISABLE=
